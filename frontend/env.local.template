# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8002
# API Key - Leave empty to use default 'user-key-456', or set to 'admin-key-123' for admin access
NEXT_PUBLIC_API_KEY=

# App Configuration
NEXT_PUBLIC_APP_NAME="SarvanOM - Universal Knowledge Platform"
NEXT_PUBLIC_VERSION=1.0.0
NEXT_PUBLIC_DOMAIN=sarvanom.com

# Feature Flags
NEXT_PUBLIC_ENABLE_FEEDBACK=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_EXPERT_MODE=false

# Development Configuration
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_ENABLE_DEBUG_LOGGING=false

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8002/ws
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000

# Analytics and Monitoring
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_SENTRY_DSN=

