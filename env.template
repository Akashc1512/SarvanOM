# =============================================================================
# UNIVERSAL KNOWLEDGE HUB - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure your environment variables
# cp env.template .env

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SERVICE_NAME=sarvanom-api
VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/sarvanom_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX=sarvanom_knowledge

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=sarvanom-vectors

QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=sarvanom_vectors

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key
OPENAI_LLM_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.3

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# Rate limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_TOKENS=10000
RATE_LIMIT_WINDOW=60

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
OPENTELEMETRY_ENABLED=true
OPENTELEMETRY_ENDPOINT=http://localhost:4317

# Logging
LOG_FORMAT=json
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SERVICES=DEBUG

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
SEARCH_MAX_RESULTS=100
SEARCH_MIN_SCORE=0.7
SEARCH_TIMEOUT=30
VECTOR_SEARCH_ENABLED=true
HYBRID_SEARCH_ENABLED=true

# =============================================================================
# SYNTHESIS CONFIGURATION
# =============================================================================
SYNTHESIS_STYLE=comprehensive
CONFIDENCE_THRESHOLD=0.7
MAX_SYNTHESIS_TOKENS=2000
SYNTHESIS_TIMEOUT=60

# =============================================================================
# FACT CHECKING CONFIGURATION
# =============================================================================
FACTCHECK_ENABLED=true
FACTCHECK_TIMEOUT=30
FACTCHECK_MIN_CONFIDENCE=0.8
FACTCHECK_MAX_CLAIMS=10

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_ENABLED=true
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=["pdf", "docx", "txt", "md"]
UPLOAD_PATH=./uploads

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@sarvanom.com

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only set these in development
MOCK_AI_RESPONSES=false
SKIP_AUTHENTICATION=false
ENABLE_DEBUG_ENDPOINTS=true
AUTO_RELOAD=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Only set these in production
SSL_CERT_FILE=
SSL_KEY_FILE=
FORCE_HTTPS=false
SECURE_COOKIES=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/sarvanom_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_ELASTICSEARCH_URL=http://localhost:9200
TEST_INDEX_PREFIX=test_

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5
MAX_BODY_SIZE=10485760

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_EXPERT_REVIEW=true
ENABLE_COLLABORATION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_TENANCY=false 