# Universal Knowledge Hub Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server Configuration
UKP_HOST=0.0.0.0
UKP_PORT=8002
UKP_WORKERS=4
UKP_RELOAD=false
UKP_LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Application Secrets
SECRET_KEY=your-secret-key-here
API_KEY_SECRET=your-api-key-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# API Keys for Authentication
ADMIN_API_KEY=admin-your-admin-key-here
USER_API_KEY=user-your-user-key-here
READONLY_API_KEY=readonly-your-readonly-key-here

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Token Management
DEFAULT_TOKEN_BUDGET=1000
MAX_TOKENS_PER_QUERY=10000
DAILY_TOKEN_BUDGET=1000000

# Confidence Thresholds
CONFIDENCE_THRESHOLD=0.7
HIGH_SIMILARITY_THRESHOLD=0.95
SIMILARITY_THRESHOLD=0.92

# Agent Timeouts
AGENT_TIMEOUT_MS=30000
REQUEST_TIMEOUT=30
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache Settings
MAX_CACHE_SIZE=10000
CACHE_SIMILARITY_THRESHOLD=0.92
DEFAULT_QUERY_TTL=3600
FACTUAL_QUERY_TTL=1800
ANALYTICAL_QUERY_TTL=3600
CREATIVE_QUERY_TTL=7200

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Concurrency
MAX_CONCURRENT_WORKERS=5
MAX_CONCURRENT_REQUESTS=100

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# ENVIRONMENT
# =============================================================================

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO 